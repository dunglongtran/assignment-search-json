{
  "compilerOptions": {
    "outDir": "build/dist",
    "module": "commonjs",
    "target": "ES2017",
    "lib": [
      "es6",
      "ESNext",
      "dom"
    ],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": false,
    "noEmit": false,
    "declaration": false,
    "experimentalDecorators": true
  }
}